<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Corte de"
        android:textAlignment="center"
        android:textColor="#0B515D"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="xxxxx"
        android:textColor="#0B515D"
        android:textSize="15sp" />


    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Sucursal"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:enabled="false"
            android:inputType="textCapSentences"
            android:text=" Establecimiento:"
            android:textColor="#0B515D"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Sucursal2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:inputType="textCapSentences"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"
            android:enabled="false"/>
    </LinearLayout>


    <!--FECHA Y COMPRA -->
    <LinearLayout
        android:id="@+id/cliente"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editHora"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:editable="false"
            android:text="  Fecha: "
            android:textColor="#0B515D"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/editFecha"
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtFecha"
            android:layout_alignParentStart="true"
            android:editable="false"
            android:inputType="textCapCharacters"
            android:text="dd/mm/aaaa"
            android:textColor="#000000"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/txtHora"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:editable="false"
            android:text="  Hora: "
            android:textColor="#0B515D"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/editHora"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtHora"
            android:layout_alignParentStart="true"
            android:editable="false"
            android:inputType="textCapCharacters"
            android:text="00:00:00"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Cajero"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:enabled="false"
            android:inputType="textCapSentences"
            android:text=" Cajero:"
            android:textColor="#0B515D"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/Cajero2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:enabled="false"
            android:inputType="textCapSentences"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Monto"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:enabled="false"
            android:inputType="textCapSentences"
            android:text=" Saldo inicial: $"
            android:textColor="#0B515D"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/Monto2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:enabled="false"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!--EFECTIVO-->
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="33dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/efectivo"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:enabled="false"
            android:inputType="textCapSentences"
            android:text=" Efectivo: $"
            android:textColor="#0B515D"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/efectivo2"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!--TARJETAS -->
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="31dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/transferencia"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:enabled="false"
            android:inputType="textCapSentences"
            android:text=" Tarjetas: $"
            android:textColor="#0B515D"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/transferencia2"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!--TOTAL EN CAJA-->
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/total"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:enabled="false"
            android:inputType="textCapSentences"
            android:text=" Total en caja: $"
            android:textColor="#0B515D"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/total2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:enabled="false"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!--Botones-->
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnCancela3"
            android:layout_width="108dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorCancela"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingTop="0dp"
            android:text="CANCELAR"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnAcepta3"
            android:layout_width="108dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorAccent"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingTop="0dp"
            android:text="Aceptar"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>
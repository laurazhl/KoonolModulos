<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarVenta"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Registrar venta"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txtCliente"
                    android:layout_width="178dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Cliente:"
                    android:textColor="#000000" />


                <EditText
                    android:id="@+id/cliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textCapCharacters" />

                <ImageButton
                    android:id="@+id/btnBuscar"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/busqueda2" />


            </LinearLayout>

            <!--PRODUCTO Y PRESENTACION-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txtProducto"
                    android:layout_width="162dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Productos:"
                    android:textColor="#000000" />


                <EditText
                    android:id="@+id/producto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textCapCharacters" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txtPresentacion"
                    android:layout_width="256dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="PresentaciÃ³n:"
                    android:textColor="#000000" />


                <EditText
                    android:id="@+id/presentacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textCapCharacters" />


                <ImageButton
                    android:id="@+id/btnBuscar2"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/busqueda" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtPrecio"
                    android:layout_width="59dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Precio:"
                    android:textColor="#000000" />


                <TextView
                    android:id="@+id/precio"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:enabled="false"
                    android:gravity="center_vertical"
                    android:hint="$0.0" />


                <TextView
                    android:id="@+id/txtCantidad"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Cantidad:"
                    android:textColor="#000000" />


                <EditText
                    android:id="@+id/cantidad"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:enabled="false"
                    android:gravity="left"
                    android:hint="0" />

                <ImageButton
                    android:id="@+id/btnBuscar3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/compra" />

            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/vistalista"
                android:layout_width="match_parent"
                android:layout_height="393dp"
                android:layout_margin="8dp"></android.support.v7.widget.RecyclerView>


            <LinearLayout
                android:layout_width="213dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtSubtotal"
                    android:layout_width="79dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Subtotal: $"
                    android:textColor="#000000" />


                <TextView
                    android:id="@+id/subtotal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:enabled="false"
                    android:gravity="left"
                    android:hint="0.0" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="212dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtIva"
                    android:layout_width="79dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="IVA: $"
                    android:textColor="#000000" />


                <TextView
                    android:id="@+id/iva"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:enabled="false"
                    android:gravity="left"
                    android:hint="0.0" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="212dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDescuento"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Descuento: $"
                    android:textColor="#000000" />


                <TextView
                    android:id="@+id/descuento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:enabled="false"
                    android:gravity="left"
                    android:hint="0.0" />

            </LinearLayout>

            <Button
                android:id="@+id/btnPagar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#999999"
                android:foreground="?android:attr/selectableItemBackground"
                android:text="PAGAR: $ 0.0"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:layout_marginTop="20dp"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>